<Window x:Class="MyImageProcessor.View.ThresholdPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyImageProcessor.View"
        mc:Ignorable="d"
        Title="ThresholdPopup" Height="100" Width="400">
    <Grid>
        <StackPanel>
            <Label Content="임계값을 입력하세요.(0~255)"/>
            <WrapPanel>
                <Label Content="Threshold "/>
                <TextBox Name="ThresholdTextBox" Width="200"/>
                <Button Content="입력" Width="50" Click="DataSendButtonClick"/>
            </WrapPanel>
        </StackPanel>
    </Grid>
</Window>
